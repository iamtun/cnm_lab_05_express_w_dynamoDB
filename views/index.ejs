<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <form action="/create" method="get">
        <button>create</button>
    </form>
    <table>
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Count</th>
            <th>Actions</th>
        </thead>

        <tbody>
            <tr>
                <% Items.forEach(item => { %>
                    <tr>
                        <td><%= item.id.S %></td>
                        <td><%= item.name.S %></td>
                        <td><%= item.count.N %></td>
                        <td>
                            <form action="/items/<%= item.id.S %>" method="get">
                                <button type="submit">Update</button>
                            </form>
                            <form action="/items/<%= item.id.S %>/delete" method="post">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tr>
        </tbody>
    </table>
</body>
</html>